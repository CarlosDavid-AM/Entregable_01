<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:src="@drawable/basura_main"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="70dp"/>

    <Button
        android:id="@+id/btnRegisterResidue"
        android:text="Registrar residuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnViewRegisters"
        android:text="Listar Registros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnViewById"
        android:text="Buscar y Eliminar por ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>